<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#fea6"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageButton
        android:id="@+id/ib_back"
        android:layout_gravity="left"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:text="时间设置"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:text="09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="时"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:text="09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="分"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:text="09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="秒"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:text="日期设置"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <EditText
                android:text="2017"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="年"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:text="09"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="月"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:text="09"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="日"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>